.HN_tit
  text-align center
  line-height 30px
  font-size 30px
  color #00a46e
.HN_tit
  padding 48px 0 36px
  font-size 28px
  em
    background url(../images/HN_tit.png) no-repeat bottom center
    padding-bottom 20px
.HIW_tit
  padding 47px 0 34px
  background url(../images/HIW_tit.png) no-repeat center 40px
@media (min-width:1140px)
  .HN_tit
    line-height 30px
    font-size 30px
