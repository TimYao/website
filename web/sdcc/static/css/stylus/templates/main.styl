      padding-bottom 30px
/* banner 开始 */
.banner
    text-align center
    position relative
    img
        max-width 100%
        border 0
        vertical-align middle
@media (max-width: 767px)
    .banner
        .banner01
            display none
        .banner02
            display inline-block
@media (min-width: 768px)
    .banner
        .banner01
            display inline-block
        .banner02
            display none
@media (min-width: 640px)
  .banner
    img
      min-width 100%

/* banner 结束 */
/* 新闻热点 开始 */
.HN_con
  width 100%
  padding 0 15px 10px
  margin 0 auto
  position relative
  overflow hidden
  p
    text-align center
    color #666
@media (min-width:775px)
  .HN_con
    padding 0 15px 0px
@media (min-width:992px) and (max-width:1139px)
  .HN_con
    padding 0 15px 20px 15px
@media (min-width:1140px)
  .HN_con
    width 905px
    padding 30px 0 50px 0
    p
      font-size 16px
      line-height 2.2

.und_div
  width 70%
  margin 0 auto
  padding 37px 0
.und_conference
  background #f5f5f5
  overflow hidden
  .announce
    padding 0 15px
  .announce_wrap
    padding 0 15px
  .pull-left
    float left !important
  .pull-right
    float right !important
  .col-nei
    border-right 1px solid #cbcbcb
    padding 0 25px 40px 0
    vertical-align top
    min-height 290px
    .mainTitle
      color #2791c9
      font-weight bold
      font-size 18px
      text-align right
      position relative
      margin-bottom 25px
      vertical-align top
      margin-top -1px
      float right
      .icons
        background url("/static/images/icon01.gif") no-repeat right center
        position absolute
        width 19px
        height 19px
        display block
        right -35px
        top 0px
    .maincontent
      font-size 14px
      color #333333
      text-align right
      position relative
      line-height 1.8
      margin-bottom 25px
      float right
      width 100%
      word-wrap break-word
      .icons
        background url("/static/images/icon02.gif") no-repeat right center
        position absolute
        top 5px
        width 19px
        height 19px
        display block
        color #fff
        font-size 14px
        font-family Arial
        text-align center
        line-height 19px
        right -35px
  .col-nei-r
    .col-nei
      border-left 1px solid #cbcbcb
      padding 0 0px 40px 25px
      border-right none !important
      .mainTitle
        color #14af7b
        float left
    .icons
      top 5px
      left -35px
    .maincontent,.mainTitle
      text-align left
    .mainTitle
      .icons
        background url("/static/images/icon4.gif") no-repeat right center
    .maincontent
      .icons
        background url("/static/images/icon03.gif") no-repeat right center
    .pbtns
      text-align left
      .btns
        background-color #14af7b
  .pbtns
    text-align right
    padding-right 30px
    .btns
      font-size 22px
      color #fff
      font-weight bold
      background-color #2a9cd8
